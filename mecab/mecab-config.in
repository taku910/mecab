#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
    cat <<EOF
Usage: mecab-config [OPTIONS]

Options:
  [--cxx]
  [--prefix[=DIR]]
  [--exec-prefix[=DIR]]
  [--libs]
  [--cflags]
  [--dicdir]
  [--libexecdir]
  [--sysconfdir]
  [--libs-only-L]
  [--libs-only-l]
  [--inc-dir]
  [--help]
  [--version]
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --cxx)
       echo @CXX@
       ;;
       
    --cc)
       echo @CC@
       ;;
       
    --prefix=*)
	prefix=$optarg
        if test $exec_prefix_set = no ; then
          exec_prefix=$optarg
        fi
	;;

    --prefix)
	echo $prefix
	;;

    --exec-prefix=*)
	exec_prefix=$optarg
	exec_prefix_set=yes
	;;

    --exec-prefix)
	echo $exec_prefix
	;;

    --version)
	echo @VERSION@
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
        if test @includedir@ != /usr/include ; then
          includes=-I@includedir@
        fi
        echo $includes
       	;;

    --libs)
       	echo -L@libdir@ -lmecab @MECAB_LIBS@
       	;;

    --dicdir)
       	echo @libdir@/mecab/dic
       	;;
	
    --inc-dir)
        echo @includedir@
	;;
    
    --libs-only-L)
        echo @libdir@
	;;
	
    --libs-only-l)
        echo -lmecab @MECAB_LIBS@ | sed s/-l//g;
	;;

    --libexecdir)
       	echo @prefix@/libexec/mecab
       	;;
	
    --sysconfdir)
       	echo @sysconfdir@
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done

exit 0
